{
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "document": false,
        "escape": false,
        "navigator": false,
        "unescape": false,
        "window": false,
        "describe": true,
        "before": true,
        "it": true,
        "expect": true,
        "sinon": true,
        "commonjs": true
    },
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "indent": ["error", 4, {
            "SwitchCase": 1
        }],
        "curly": ["error", "all"],
        "one-var": "off",
        "spaced-comment": "off",
        "semi": ["error", "always"],
        "max-len": [1, 120, 4, {
            ignoreComments: true,
            ignoreUrls: true
        }],
        "no-warning-comments": "off",
        "require-jsdoc": "off",
        "comma-dangle": "off",
        "object-curly-spacing": ["error", "always"]
    }
}
